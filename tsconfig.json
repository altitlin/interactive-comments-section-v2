{
  "compilerOptions": {
    "plugins": [
      {
        "name": "typescript-plugin-css-modules"
      }
    ],
    "target": "es6",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext",
      "ScriptHost"
    ],
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react",
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "outDir": "./dist",
    "rootDirs": [
      "./src"
    ],
    "typeRoots": [
      "src/@types/assets",
      "src/@types/styles",
      "./node_modules/@types"
    ],
    "sourceMap": true,
    "baseUrl": "./src",
    "paths": {
      "@components": [ "./components" ],
      "@context": [ "./context" ],
      "@features/*": [ "./features/*" ],
      "@hooks": [ "./hooks" ],
      "@lib/*": [ "./lib/*" ],
      "@navigation": [ "./navigation" ],
      "@pages": [ "./pages" ],
      "@styles": [ "./common/styles" ]
    }
  },
  "include": [
    "src/**/*",
    "./jest.config.ts",
    "./setupJest.ts"
  ],
  "exclude": [
    "node_modules",
    "webpack"
  ]
}
